class Solution(object):
    def returnToBoundaryCount(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        count=0
        bound=0
        for i in range(len(nums)):
             if nums[i] < 0:
               count-=nums[i]
             elif nums[i] > 0:
               count-=nums[i]
            
             if count==0:
               bound+=1
        return bound
