class Solution(object):
    def averageValue(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        sum=0
        count=0
        avg=0
        for i in range(len(nums)):
            if(nums[i]%2==0 and nums[i]%3==0):
                sum+=nums[i]
                count+=1
        
     
        if count != 0:
           avg = sum / count
        else:
           avg = 0

        return avg
        
       
               
          
        
